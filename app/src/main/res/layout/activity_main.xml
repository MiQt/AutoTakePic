<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <fragment
        android:id="@+id/fragment"
        android:name="com.iezview.autopicviewdemo.Camera2Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>

    <com.iezview.autopicviewdemo.AngleIndicater
        android:id="@+id/angleindicater"
        android:layout_width="20dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:ballColor="#de0000"
        app:ballSelectColor="#00de00"
        app:indicaterColor="#de0000"
        app:indicaterSelectColor="#00de00"/>

</RelativeLayout>



